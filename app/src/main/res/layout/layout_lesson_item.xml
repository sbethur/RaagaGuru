<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lessonItemParent">

    <TextView
        android:id="@+id/lessonName"
        style="@style/lesson_name"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@id/lessonMenu"
        android:layout_alignParentStart="true"

        android:fontFamily="@font/roboto_mono"
        android:text="@string/placeholder"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:typeface="normal" />

    <ImageButton
        android:id="@+id/lessonMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_centerVertical="true"

        android:contentDescription="@string/lessonMenuDescription"
        android:onClick="showLessonMenu"

        style="?android:attr/actionOverflowButtonStyle"
        android:src="@drawable/ic_action_more_vert" />

</RelativeLayout>